<div class="spqn8 well">
  <%= form_for @user do |f| %>
    <div class="control-group">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="control-group">
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>
    </div>

    <div class="control-group" >

      <strong>Please Don't input your phone. Because I use trial account. Sorry..</strong><br/>
      <%= f.label :phone, "Phone Number <small>(ex: +886988235123, +12766334592 )</small>".html_safe %>

      <%= f.text_field :phone%>
      <%= link_to '#', id: 'two_fator_phone' do%>
        <i class="icon-question-sign"> </i>
      <% end %>
    </div>


    <%= f.submit @user.new_record? ? "Register" : "Update Profile", class: 'btn btn-success' %>
  <%end%>
</div>