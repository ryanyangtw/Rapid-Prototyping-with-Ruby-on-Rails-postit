<%if logged_in? %>
  <p class="pull-right">
    [<%= link_to 'edit this post', edit_post_path(@post) %>]
  </p>
<%end%>



<%= render @post.categories %>
<%#= render partial: 'categories/category', collection: @post.categories ,as: :category%>

<%= render partial: 'shared/content_title', locals: {title: @post.title}%>

<p>
  <%= @post.description%>
</p>
<hr/>

<% if logged_in? %>
  <%= form_for [@post, @comment] do |f| %>
    <%= render 'shared/errors', obj: @comment %>
    <div class="control-group">
      <%= f.label :body, 'Leave a comment'%>
      <%= f.text_area :body, rows: 4, class: 'span4'%>
    </div>
    <%= f.submit 'create comment', class: 'btn btn-primary'%>
  <% end %>
<%end%>

<h5> Comments: </h5>

<% @post.reload.comments.each do |comment| %>
  <%= render 'comments/comment', comment: comment, show_post: false%>
<%end%>




