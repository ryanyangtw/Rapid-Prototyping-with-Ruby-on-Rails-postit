<div class="row">
  <div class="span8 well">
    <%= render post.categories%>
    <h4><%#=link_to post.title, fix_url(post.url) %></h4>
    <p><%= post.description %></p>
    <p> 
      <span class="quite">posted by</span> <%= link_to(post.creator.username, user_path(post.creator.username) ) if post.creator.present?%>
      <small>at <%= display_datetime(post.created_at) %></small>
    </p>
      <small>
        <span>
          <%= link_to("#{post.comments.size} commnet", post_path(post) )%>
        </span>
      </small>
    
  </div>
</div>